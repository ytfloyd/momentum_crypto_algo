# Coinbase Advanced Trade API Configuration
# Copy this file to .env and fill in your actual values

# API Credentials (get these from Coinbase Developer Platform)
CB_API_KEY=your_api_key_here
CB_API_SECRET=your_api_secret_here
CB_API_PASSPHRASE=your_passphrase_here

# Portfolio Configuration
CB_PORTFOLIO_ID=your_portfolio_id_here

# API URL (switch between sandbox and production)
CB_API_URL=https://api.coinbase.com
# CB_API_URL=https://api.sandbox.coinbase.com  # Use this for testing

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/rebalance_agent.log

# Rebalancing Configuration
REBALANCE_INTERVAL_MINUTES=60
DRY_RUN=true  # Set to false for live trading
